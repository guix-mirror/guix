"name: python\n"
"version: 3.3.5\n"

#. type: example
#: guix-git/doc/guix.texi:3619
#, fuzzy, no-wrap
#| msgid ""
#| "name: glibc\n"
#| "version: 2.25\n"
#| "relevance: 1\n"
#| "\n"
msgid ""
"name: guile\n"
"version: 2.2.7\n"
"@dots{}\n"
