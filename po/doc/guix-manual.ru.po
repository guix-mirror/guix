#. type: deftp
#: guix-git/doc/guix.texi:18132
msgid "This is the data type for the NTP service configuration."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:18134
#, no-wrap
msgid "@code{servers} (default: @code{%ntp-servers})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:18138
