#. type: item
#: guix-git/doc/guix.texi:13780
#, no-wrap
msgid "--list-backends"
msgstr "--list-backends"

#. type: table
#: guix-git/doc/guix.texi:13782
msgid "List the supported graph backends."
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:13784
