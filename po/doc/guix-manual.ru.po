#: guix-git/doc/guix.texi:21407
msgid "Script file to use as @file{default.pa}."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:21408
#, no-wrap
msgid "@code{system-script-file} (default: @code{(file-append pulseaudio \"/etc/pulse/system.pa\")})"
