#: guix-git/doc/guix.texi:34885
#, no-wrap
msgid "modprobe.blacklist=@var{modules}@dots{}"
msgstr ""

#. type: cindex
#: guix-git/doc/guix.texi:34886
#, no-wrap
msgid "module, black-listing"
msgstr ""

#. type: cindex
#: guix-git/doc/guix.texi:34887
#, no-wrap
