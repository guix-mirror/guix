msgstr ""

#. type: deftypevr
#: guix-git/doc/guix.texi:20569
msgid "Specifies named access control policies."
msgstr ""

#. type: deftypevr
#: guix-git/doc/guix.texi:20571
msgid "Available @code{policy-configuration} fields are:"
msgstr ""

#. type: deftypevr
