#. type: table
#: guix-git/doc/guix.texi:18279
msgid "The @command{inetd} executable to use."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:18280 guix-git/doc/guix.texi:27992
#, no-wrap
msgid "@code{entries} (default: @code{'()})"
