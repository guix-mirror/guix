#: guix-git/doc/guix.texi:27062
msgid "Maximum of worker processes."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:27036
#, no-wrap
msgid "@code{start-servers} (default: @code{2})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:27038
