msgstr ""

#. type: item
#: guix-git/doc/guix.texi:29820
#, no-wrap
msgid "@code{sticker-file} (default: @code{\"~/.mpd/sticker.sql\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:29822
msgid "The location of the sticker database."
msgstr ""

