#: guix-git/doc/guix.texi:31619
#, no-wrap
msgid "@code{whitelist} (default: @code{'()})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31621
msgid "If not empty, only allow access to this list of directories."
