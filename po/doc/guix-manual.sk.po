#. type: table
#: guix-git/doc/guix.texi:27146
msgid "A procedure specifying how to filter packages that are displayed."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:27147
#, no-wrap
msgid "@code{package-page-extension-proc} (default: @code{(const '())})"
