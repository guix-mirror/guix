#: guix-git/doc/guix.texi:29823
#, no-wrap
msgid "@code{port} (default: @code{\"6600\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:29825
msgid "The port to run mpd on."
msgstr ""

