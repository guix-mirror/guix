#. type: table
#: guix-git/doc/guix.texi:27140
msgid "The page title prefix."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:27141
#, no-wrap
msgid "@code{guix-command} (default: @code{\"guix\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:27143
