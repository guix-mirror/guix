msgstr "Produce un grafo de salida de @var{tipo}, donde @var{tipo} debe ser uno de los valores enumerados previamente."

#. type: item
#: doc/guix.texi:9521
#, no-wrap
msgid "--list-types"
msgstr "--list-types"

#. type: table
#: doc/guix.texi:9523
msgid "List the supported graph types."
msgstr "Enumera los tipos de grafos implementados."

#. type: item
#: doc/guix.texi:9524
#, no-wrap
msgid "--backend=@var{backend}"
msgstr "--backend=@var{motor}"

#. type: itemx
#: doc/guix.texi:9525
#, no-wrap
msgid "-b @var{backend}"
msgstr "-b @var{motor}"

#. type: table
#: doc/guix.texi:9527
