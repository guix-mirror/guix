msgid "searching for documentation"
msgstr "búsqueda de documentación"

#. type: cindex
#: doc/guix.texi:25397
#, no-wrap
msgid "Info, documentation format"
msgstr "Info, formato de documentación"

#. type: cindex
#: doc/guix.texi:25398
