#. type: item
#: doc/guix.texi:15962
#, no-wrap
msgid "@code{servers} (default: @code{%ntp-servers})"
msgstr "@code{servers} (par défaut : @code{%ntp-servers})"

#. type: table
#: doc/guix.texi:15966
