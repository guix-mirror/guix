#: doc/guix.texi:12320
#, no-wrap
msgid "{Data Type} mcron-configuration"
msgstr ""

#. type: deftp
#: doc/guix.texi:12322
msgid "Data type representing the configuration of mcron."
msgstr ""

#. type: item
#: doc/guix.texi:12324
#, no-wrap
msgid "@code{mcron} (default: @var{mcron})"
msgstr ""

#. type: table
#: doc/guix.texi:12326
msgid "The mcron package to use."
msgstr ""

