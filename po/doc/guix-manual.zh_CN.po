#: doc/guix.texi:14972
#, no-wrap
msgid "postgis"
msgstr ""

#. type: example
#: doc/guix.texi:14975
#, no-wrap
msgid ""
"(use-package-modules databases geo)\n"
"\n"
msgstr ""

#. type: example
#: doc/guix.texi:14985
#, no-wrap
