#. type: item
#: doc/guix.texi:10481
#, no-wrap
msgid "@code{swap-devices} (default: @code{'()})"
msgstr ""

#. type: cindex
#: doc/guix.texi:10482
#, no-wrap
msgid "swap devices"
msgstr ""

#. type: table
