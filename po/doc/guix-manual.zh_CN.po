msgstr ""

#. type: table
#: doc/guix.texi:15882
msgid "Subject"
msgstr ""

#. type: item
#: doc/guix.texi:15882
#, no-wrap
msgid "%f"
msgstr ""

#. type: table
#: doc/guix.texi:15884
