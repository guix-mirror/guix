msgid "home director"
msgstr ""

#. type: deftypevr
#: doc/guix.texi:15918
msgid "See doc/wiki/Variables.txt for full list.  Some examples:"
msgstr ""

#. type: item
#: doc/guix.texi:15919
#, no-wrap
msgid "maildir:~/Maildir"
msgstr ""

#. type: item
#: doc/guix.texi:15920
#, no-wrap
msgid "mbox:~/mail:INBOX=/var/mail/%u"
