#. type: item
#: doc/guix.texi:21761 doc/guix.texi:21984
#, no-wrap
msgid "x:stderr"
msgstr ""

#. type: table
#: doc/guix.texi:21763 doc/guix.texi:21986
msgid "output goes to stderr"
msgstr ""

#. type: item
#: doc/guix.texi:21764 doc/guix.texi:21987
#, no-wrap
msgid "x:syslog:name"
msgstr ""

#. type: table
#: doc/guix.texi:21766 doc/guix.texi:21989
