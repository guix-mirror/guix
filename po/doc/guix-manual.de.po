msgstr ""

#. type: deftypevr
#: doc/guix.texi:15987
msgid "See doc/wiki/Variables.txt for full list.  Some examples:"
msgstr ""

#. type: item
#: doc/guix.texi:15988
#, no-wrap
msgid "maildir:~/Maildir"
msgstr ""

#. type: item
#: doc/guix.texi:15989
#, no-wrap
msgid "mbox:~/mail:INBOX=/var/mail/%u"
