#. type: deftp
#: doc/guix.texi:20238
#, no-wrap
msgid "{Data Type} menu-entry"
msgstr ""

#. type: deftp
#: doc/guix.texi:20240
msgid "The type of an entry in the bootloader menu."
msgstr ""

#. type: code{#1}
#: doc/guix.texi:20243
#, no-wrap
msgid "label"
