#, no-wrap
msgid "`"
msgstr "`"

#. type: findex
#: guix-git/doc/guix.texi:7050
#, no-wrap
msgid "quasiquote"
msgstr "quasiquote"

#. type: cindex
#: guix-git/doc/guix.texi:7051
#, no-wrap
msgid "comma (unquote)"
msgstr "Komma (Demaskierung)"

#. type: findex
