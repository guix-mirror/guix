msgid "Defaults to @samp{\"polkit\"}."
msgstr ""

#. type: deftypevr
#: doc/guix.texi:21482
#, no-wrap
msgid "{@code{libvirt-configuration} parameter} string auth-unix-rw"
msgstr ""

#. type: deftypevr
#: doc/guix.texi:21486
