#. type: deftypevr
#: doc/guix.texi:14157
msgid "Delimiter character between local-part and detail in email address.  Defaults to @samp{\"+\"}."
msgstr ""

#. type: deftypevr
#: doc/guix.texi:14159
#, no-wrap
msgid "{@code{dovecot-configuration} parameter} string lda-original-recipient-header"
