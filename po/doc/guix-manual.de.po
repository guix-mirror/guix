#: guix-git/doc/contributing.texi:932 guix-git/doc/contributing.texi:952
#: guix-git/doc/contributing.texi:953
#, no-wrap
msgid "Data Types and Pattern Matching"
msgstr "Datentypen und Mustervergleich"

#. type: menuentry
#: guix-git/doc/contributing.texi:932
msgid "Implementing data structures."
msgstr "Implementierung von Datenstrukturen."

